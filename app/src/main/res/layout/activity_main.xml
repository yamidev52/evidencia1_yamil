<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D32F2F"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokédex"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:textSize="28sp"
                android:layout_marginBottom="16dp" />

            <!-- Campo de búsqueda -->
            <EditText
                android:id="@+id/etPokemon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:hint="Nombre o ID (ej: pikachu o 25)"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#EEEEEE"
                android:inputType="text" />


            <!-- Botones principales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buscar"
                    android:backgroundTint="#FFEB3B"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnRandom"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:backgroundTint="#000000"
                    android:contentDescription="Aleatorio"
                    app:tint="#FFEB3B" />
            </LinearLayout>

            <!-- Opciones de imagen -->
            <CheckBox
                android:id="@+id/chkShiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Shiny"
                android:textColor="#FFFFFF" />

            <ToggleButton
                android:id="@+id/toggleSprite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textOn="Artwork"
                android:textOff="Sprite"
                android:backgroundTint="#FFEB3B"
                android:textColor="#000000" />

            <RadioGroup
                android:id="@+id/rgSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbFrente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Frente"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/rbEspalda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Espalda"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swDetalles"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:text="Mostrar detalles"
                android:textColor="#FFFFFF" />

            <!-- Imagen del Pokémon -->
            <ImageView
                android:id="@+id/ivPokemon"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:contentDescription="Imagen del Pokémon" />

            <!-- Detalles -->
            <TextView
                android:id="@+id/tvDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Detalles (tipo, peso, habilidades...)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- Botón limpiar -->
            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Limpiar"
                android:backgroundTint="#000000"
                android:textColor="#FFEB3B"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
